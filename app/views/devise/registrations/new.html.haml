%legend= t('sign_up')

= simple_form_for resource, :as => resource_name, :url => registration_path(resource_name), html: { class: 'form-horizontal'} do |f|

  .form-inputs
    = f.input :email, label: t('user.email'), :required => true, :autofocus => true
    = f.input :password, label: t('user.password'), :required => true
    = f.input :password_confirmation, label: t('user.password_confirmation'), :required => true

  .form-actions
    = f.button :submit, t('create')

= render "devise/shared/links"
