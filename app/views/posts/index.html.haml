.row.show-grid
  .span9
    #posts.thumbnails
      - @posts.each do |post|
        .span3
          .post.thumbnail{ style: 'cursor: pointer' }
            .caption
              .row
                %p.body.limit-text
                  =post.body
                  - if post.body and post.body.length > 180
                    ="..."

              .row
                .tags=post.tags.map(&:name).join ", "
                .created_at= "Πρόσθεση πριν #{time_ago_in_words(post.created_at)}"
  .span3
    =link_to 'Προσθήκη προσφοράς', new_post_path, class: 'btn btn-primary btn-block btn-large'

    %br

    %ul.nav.nav-tabs.nav-stacked.sidebar
      %li.title Ετικέτες
      %li
        %a
          'Ολες
          %span.badge.badge-success=@tags.length
      - @tags.each do |tag|
        %li.sidebar-link
          %a
            =tag.name
            %span.badge.badge-error= tag.count

