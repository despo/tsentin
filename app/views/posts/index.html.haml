=link_to 'Create', new_post_path, class: 'btn btn-primary'

.posts.row
  - @posts.each do |post|
    .span4
      .post
        %legend
          .title= post.name
        .body= post.body
        .description= post.description

        =post.tags.map(&:name).join ", "

        .created_at= "Πρόσθεση πριν #{time_ago_in_words(post.created_at)}"
